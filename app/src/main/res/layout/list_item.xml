<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:backgroundTint="@color/transparent">

    <ImageView
        android:id="@+id/file_img"
        android:layout_width="84dp"
        android:layout_height="68dp"
        android:layout_marginEnd="267dp"
        android:contentDescription="@string/file_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/file_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/file_name"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/file_img"
        app:layout_constraintStart_toEndOf="@+id/file_img"
        app:layout_constraintTop_toTopOf="@+id/file_img"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/file_upload_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/upload_date"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/file_img"
        app:layout_constraintStart_toEndOf="@+id/file_img"
        app:layout_constraintTop_toBottomOf="@+id/file_name"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/file_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="148dp"
        android:text="@string/file_size"
        app:layout_constraintBottom_toBottomOf="@+id/file_img"
        app:layout_constraintStart_toEndOf="@+id/file_upload_date"
        app:layout_constraintTop_toBottomOf="@+id/file_name"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>